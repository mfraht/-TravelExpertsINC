extends layout

block content
  //- h1= title
  //- p Welcome to #{title} 
  //- include nav.pug
  
  .bg-image.img4
  .bg-image.img5
  .bg-image.img6

  
    //- each pack in packages
      //- | Package Name: #{pack.PkgName}
  
  each pack in packages
    #textcontent2.bg-text
      h1 #{pack.PkgName}
      .big
        article.packages
          .package1
            img#caribbean(src='../images/caribbean.jpg' alt='Beach Bar in the Caribbean')
          .package-content
            p.package-tags
              span.package-tag #{pack.PkgName}| 
              span.package-tag All Inclusive 
            //- h1.package-title #{pack.PkgName}
            p.package-metadata
              span.package-rating
                | &starf;&starf;&starf;&starf;
                span &star;
              span.package-votes (12 votes)
            p.package-desc #{pack.PkgBasePrice} CAD
            p
              | Cruise the Caribbean &amp; Celebrate the New Year.
            
            p 
              | Package Start Date: #{pack.PkgStartDate}
              | Package End Date: #{pack.PkgEndDate}
              
            h4 
              a(href="/package/" + pack.PackageId).card-title Click for details
            //- if user.role == "agent"
            //-   | Agency Commission: #{pack.PkgAgencyCommission} CAD
            button.package-buy(type='button')
              img#cart(src='../images/shopping-cart.png')

  a.btn.btn-primary.col-12(href='/') Home
