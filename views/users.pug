extends layout

block content
    .bg-image.img1(style=" max-height: 300px;")
    .container
        h2 All users
            each user in users
                .big
                    article.packages.justify-content-center            
                        .row
                            .card.col-12.border-danger.bg-light.bg-gradient.border.border-primary
                                h3.text-center  #{user.fname} #{user.lname}
                                hr
                                h5.card-text
                                    | UserId: #{user.userId}
                                h5.card-text
                                    | Role: #{user.role}
                                h5.card-text
                                    | Username: #{user.username}
                                h5.card-text
                                    | User FirstName: #{user.fname}
                                h5.card-text
                                    | User LastName: #{user.lname}
                                h5.card-text
                                    | User Address: #{user.userAddress} 
                                h5.card-text
                                    | User City: #{user.userCity}
                                h5.card-text
                                    | User Prov: #{user.userProv}
                                h5.card-text
                                    | User Postal: #{user.userPostal}
                                h5.card-text
                                    | User Country: #{user.userCountry}
                                h5.card-text
                                    | User HomePhone: #{user.userHomePhone}
                                h5.card-text
                                    | User BusPhone: #{user.userBusPhone}
                                h5.card-text
                                    | User Email: #{user.email}
                                h5.card-text
                                    | AgentId: #{user.AgentId}
                                h5.card-text
                                    a.btn.btn-info(target='__blank' href='/users/userprofile/'+ user.userId) User Profile
        a.btn.btn-primary.col-12(href='/') Home Page

