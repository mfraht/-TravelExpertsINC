extends layout
//- Author:Mohamed Ibrahim
block content
  .container
    .main-body
      .row
        .col-lg-4
          .card
            .card-body
              .d-flex.flex-column.align-items-center.text-center
                img.rounded-circle.p-1.bg-primary(src='https://bootdey.com/img/Content/avatar/avatar7.png' alt='Admin' width='110')
                .mt-3
                  h4 #{user.fname} #{user.lname}
                  p.text-secondary.mb-1 #{user.role}
                  if user.userAddress
                    p.text-muted.font-size-sm #{user.userAddress}, #{user.userCity}, #{user.userProv}, #{user.userCountry}
                  button.btn.btn-primary Follow
                  button.btn.btn-outline-primary Message
              hr.my-4
              ul.list-group.list-group-flush
                li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
                  h6.mb-0
                    svg.feather.feather-globe.me-2.icon-inline(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                      circle(cx='12' cy='12' r='10')
                      line(x1='2' y1='12' x2='22' y2='12')
                      path(d='M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z')
                    | Website
                  span.text-secondary #{user.username}
                li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
                  h6.mb-0
                    svg.feather.feather-github.me-2.icon-inline(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                      path(d='M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22')
                    | Github
                  span.text-secondary #{user.username}
                li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
                  h6.mb-0
                    svg.feather.feather-twitter.me-2.icon-inline.text-info(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                      path(d='M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z')
                    | Twitter
                  span.text-secondary @#{user.username}
                li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
                  h6.mb-0
                    svg.feather.feather-instagram.me-2.icon-inline.text-danger(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                      rect(x='2' y='2' width='20' height='20' rx='5' ry='5')
                      path(d='M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z')
                      line(x1='17.5' y1='6.5' x2='17.51' y2='6.5')
                    | Instagram
                  span.text-secondary #{user.username}
                li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
                  h6.mb-0
                    svg.feather.feather-facebook.me-2.icon-inline.text-primary(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                      path(d='M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z')
                    | Facebook
                  span.text-secondary #{user.username}
        if add 
          h3 Add new Profile
        else 
          h3 Edit Profile
        form.row.g-3(method='POST' action="")  
          .col-lg-8
            .card
                .card-body
                  .row.mb-3
                    p.d-none 
                      input.form-control(name="_id" type="number" value=user && user.userId) 
                      input.form-control(name="userId" type="number" value=user && user.userId)
                      input.form-control(name="username" type="text" value=user && user.username)
                      input.form-control(name="customerId"  type="text" value=user && user.userId)
                      input.form-control(name="agentId" type="text" value=user && user.agentId)
                      input.form-control(name="role" type="text" value=user && user.role)
                    .col-sm-3
                      h6.mb-0 Username
                    .col-sm-9.text-secondary
                      p #{user.username}
                    if user
                      .col-sm-3
                        h6.mb-0 First Name
                      .col-sm-9.text-secondary
                        input.form-control(type='' name='fname' required value=user && user.fname)
                      .col-sm-3
                        h6.mb-0 Last Name
                      .col-sm-9.text-secondary
                        input.form-control(type='text' name='lname' required value=user && user.lname)
                      .row.mb-3
                        .col-sm-3
                          h6.mb-0 Email
                        .col-sm-9.text-secondary
                          input.form-control(type='text' name='email' required value=user && user.email)
                      .row.mb-3
                        .col-sm-3
                          h6.mb-0 Phone
                        .col-sm-9.text-secondary
                          input.form-control(type='number' name='userHomePhone' required value=user && user.userHomePhone)
                      .row.mb-3
                        .col-sm-3
                          h6.mb-0 Mobile
                        .col-sm-9.text-secondary
                          input.form-control(type='number' name='userBusPhone' value=user && user.userBusPhone)
                      .row.mb-3
                        .col-sm-3
                          h6.mb-0 Address
                        .col-sm-9.text-secondary
                          input.form-control(type='text' name='userAddress' value=user && user.userAddress)
                      .row.mb-3
                        .col-sm-3
                          h6.mb-0 City
                        .col-sm-9.text-secondary
                          input.form-control(type='text' name='userCity' value=user && user.userCity)
                      .row.mb-3
                        .col-sm-3
                          h6.mb-0 Province
                        .col-sm-9.text-secondary
                          input.form-control(type='text' name='userProv' value=user && user.userProv)
                      .row.mb-3
                        .col-sm-3
                          h6.mb-0 Postal
                        .col-sm-9.text-secondary
                          input.form-control(type='text' name='userPostal' value=user && user.userPostal)
                      .row.mb-3
                        .col-sm-3
                          h6.mb-0 Country
                        .col-sm-9.text-secondary
                          input.form-control(type='text' name='userCountry' value=user && user.userCountry)
                      .row.mb-3
                        .col-sm-3
                          h6.mb-0 Password
                        .col-sm-9.text-secondary
                          input.form-control(type='password' name='password' value=user && user.password)
                    
                      .row.mb-3
                        .col-sm-3
                          h6.mb-0 Current Role
                        .col-sm-9.text-secondary
                          h5 #{user.role}
                        .col-sm-3    
                    .row
                      .col-sm-3
                      .col-sm-9.text-secondary
                        button.btn.btn-primary.col-12.mt-4(type='submit') 
                          if add && currentUser && currentUser.role != "manager" 
                            | Add
                          else 
                            | Save Changes
                      .col-md-4
                      .col-md-3
                        a.btn.btn-primary.col-12.mt-4(href=add ? '/' : '/users/userprofile/' + (user && user.userId)) Cancel
          .row
            .col-sm-12
              .card
                .card-body
                  h5.d-flex.align-items-center.mb-3 Project Status
                  p Web Design
                  .progress.mb-3(style='height: 5px')
                    .progress-bar.bg-primary(role='progressbar' style='width: 80%' aria-valuenow='80' aria-valuemin='0' aria-valuemax='100')
                  p Website Markup
                  .progress.mb-3(style='height: 5px')
                    .progress-bar.bg-danger(role='progressbar' style='width: 72%' aria-valuenow='72' aria-valuemin='0' aria-valuemax='100')
                  p One Page
                  .progress.mb-3(style='height: 5px')
                    .progress-bar.bg-success(role='progressbar' style='width: 89%' aria-valuenow='89' aria-valuemin='0' aria-valuemax='100')
                  p Mobile Template
                  .progress.mb-3(style='height: 5px')
                    .progress-bar.bg-warning(role='progressbar' style='width: 55%' aria-valuenow='55' aria-valuemin='0' aria-valuemax='100')
                  p Backend API
                  .progress(style='height: 5px')
                    .progress-bar.bg-info(role='progressbar' style='width: 66%' aria-valuenow='66' aria-valuemin='0' aria-valuemax='100')

