extends layout

block content
  
  .container
    .main-body
      .row
        .col-lg-4
          .card
            .card-body
              .d-flex.flex-column.align-items-center.text-center
                //- img.rounded-circle.p-1.bg-primary(src='https://bootdey.com/img/Content/avatar/avatar6.png' alt='Admin' width='110')
                img.rounded-circle.p-1.bg-primary(src='https://bootdey.com/img/Content/avatar/avatar7.png' alt='Admin' width='110')
                .mt-3
                  h4 #{user.fname} #{user.lname}
                  p.text-secondary.mb-1 #{user.role}
                  if user.userAddress
                    p.text-muted.font-size-sm #{user.userAddress}, #{user.userCity}, #{user.userProv}, #{user.userCountry}
                  button.btn.btn-primary Follow
                  button.btn.btn-outline-primary Message
              hr.my-4
              ul.list-group.list-group-flush
                li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
                  h6.mb-0
                    svg.feather.feather-globe.me-2.icon-inline(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                      circle(cx='12' cy='12' r='10')
                      line(x1='2' y1='12' x2='22' y2='12')
                      path(d='M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z')
                    | Website
                  span.text-secondary #{user.username}
                li.list-group-item.d-flex.justify-content-between.align-items-center.flex-wrap
                  h6.mb-0
                    svg.feather.feather-github.me-2.icon-inline(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
