extends layout

block content
    .bg-image.img1(style=" max-height: 300px;")
    .container
        h2 All customers
            each element in customers    
                .big
                    article.packages.justify-content-center            
                        .row
                            .card.col-12.border-danger.bg-light.bg-gradient.border.border-primary
                                h3.text-center  #{element.CustFirstName} #{element.CustLastName}
                                hr
                                h5.card-text
                                    | CustomerId: #{element.CustomerId}, Email: #{element.CustEmail},   Agent Id: #{element.AgentId}
                                h5.card-text
                                    | Address: #{element.CustAddress}, #{element.CustCity}, #{element.CustProv},
                                    | #{element.CustPostal}. #{element.CustCountry}
                                h5.card-text
                                    | Home Phone: #{element.CustHomePhone},  Bus Phone: #{element.CustBusPhone}
                                h5.card-text
                                    a.btn.btn-info(target='__blank' href='/users/useradddetails/'+ element.userId) User Profile
        a.btn.btn-primary.col-12(href='/') Home Page

